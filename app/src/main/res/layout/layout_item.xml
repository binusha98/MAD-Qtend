<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"





xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/addemp"
android:layout_margin="2dp"><TextView
    android:layout_width="20dp"
    android:layout_height="wrap_content"
    android:text="&#8942;"
    android:textSize="20sp"
    android:id="@+id/txt_option"
    android:layout_gravity="right"
    android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbarThumbHorizontal="@drawable/logo2"
        android:scrollbarThumbVertical="@drawable/logo2"
        android:scrollbarTrackHorizontal="@drawable/logo2"
        android:scrollbarTrackVertical="@drawable/logo2">

        <ImageView
            android:id="@+id/img_emp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="5dp"
            android:src="@drawable/profile"
            android:orientation="vertical"/>
        <ImageView
            android:id="@+id/imgs_emp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="5dp"
            android:src="@drawable/logo2"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_ot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_wd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_npd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Text"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>